<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FinishChangeActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/finish_user_name"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:hint="@string/user_name"
            android:prompt="@string/user_name"/>

        <EditText
            android:id="@+id/finish_type_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:hint="@string/user_type"
            android:textIsSelectable="false"
            android:inputType="text"/>

        <EditText
            android:id="@+id/finish_day_num"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:hint="@string/finish_day_num"
            android:inputType="number"/>

        <EditText
            android:id="@+id/finish_day_price"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:hint="@string/finish_day_price"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/finish_sum"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:hint="@string/finish_sum"
            android:textIsSelectable="true"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/finish_update"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:visibility="gone"
            android:onClick="onFinishUpdateClick"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/finish_save"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:visibility="gone"
            android:onClick="onFinishSaveClick"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
</LinearLayout>