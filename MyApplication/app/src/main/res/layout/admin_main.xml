<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_manager"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:text="@string/admin_user_manager"
            android:textColor="@color/main_text"
            android:textSize="20sp"
            android:background="@drawable/border_bottom"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/user_work"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:text="@string/admin_user_work"
            android:textColor="@color/main_text"
            android:textSize="20sp"
            android:background="@drawable/border_bottom"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:text="@string/admin_user_register"
            android:textColor="@color/main_text"
            android:textSize="20sp"
            android:background="@drawable/border_bottom"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/examine"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:text="@string/admin_user_examine"
            android:textColor="@color/main_text"
            android:textSize="20sp"
            android:background="@drawable/border_bottom"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:text="@string/admin_user_finish"
            android:textColor="@color/main_text"
            android:textSize="20sp"
            android:background="@drawable/border_bottom"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

</LinearLayout>